{
  "ignorePatterns": [ "node_modules/**" ],
  "env": {
    "browser": true,
    "node": true,
    "es2021": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    },
    "requireConfigFile": false,
    "babelOptions": {
      "presets": [ "@babel/preset-env", "@babel/preset-react" ]
    }
  },
  "rules": {
    "no-undef": "error"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}